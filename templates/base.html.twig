<!DOCTYPE html>
<html>
       
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/css/uikit.min.css"/>
			<link rel="stylesheet" href="{{ asset("css/style.css") }}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/js/uikit.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/js/uikit-icons.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <div class="lg-cov">
            <div class="lienRapid">
                    <ul>
                            <a href="#" uk-icon="icon: facebook"></a>
                            <a href="#" uk-icon="icon: youtube"></a>
                            <a href="#" uk-icon="icon: twitter"></a>
                            <a href="#" uk-icon="icon: instagram"></a>
                    </ul>
            </div>
        </div>
        <header>
            <!-- Main Navbar -->
            
            <nav class="uk-container uk-navbar navbar-blue">
                
                <div class="uk-navbar-left">
                    
                    <ul class="uk-navbar-nav">
                        <li class="uk-active">
                            <div class="cover" class="uk-navbar-nav" >
                                <img class="logo" src="{{asset("image/logo.png")}}" alt="logo">
                            </div>
                                
                        </li>
                    </ul>
                    
                </div>
                <div class="uk-navbar-right">
                    <ul class="uk-navbar-nav uk-visible@s">
                        {% if app.user %}
                                   {# si on veux on peut faire que le admin peut aller au activiter pour ajouter le marque etc
                                    {% if is_granted("ROLE_ADMIN") %}
                                    {% endif %}
                                    #}
                                    <li class="uk-text-large"><a href="{{ path("home") }}">home</a></li>
                                    <li class="uk-text-large"><a href="{{ path("gallary") }}">gallery</a></li>
                                    <li class="uk-text-large"><a href="{{ path("activity_index") }}">activity</a></li>
                                    <li class="uk-text-large"><a href="{{ path("avis_index") }}">Des Avis</a></li>
                                    <li class="uk-text-large"><a href="{{ path('logout') }}">LogOut</a></li>
                                {% else %}
                                    <li class="uk-text-large"><a href="{{ path('app_login') }}">Connexion</a></li>	
                                    <li class="uk-text-large"><a href="{{ path('registration') }}">Inscription</a></li>
                                {% endif %}
                    </ul>
                    <a href="#" class="uk-navbar-toggle uk-hidden@s" uk-navbar-toggle-icon uk-toggle="target: #sidenav"></a>
                </div>
                
            </nav>
            
        </header>
        
        {## read and display several types of flash messages #}
            {% for label, messages in app.flashes(['success','warning','error']) %}
                {% for message in messages %}
                    <div class="uk-alert-{{ label }}" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
        <div id="sidenav" uk-offcanvas="flip: true" class="uk-offcanvas">
            <div class="uk-offcanvas-bar">
                <ul class="uk-nav">
                   {% if app.user %}
                                   {# si on veux on peut faire que le admin peut aller au activiter pour ajouter le marque etc
                                    {% if is_granted("ROLE_ADMIN") %}
                                    {% endif %}
                                    #}
                                    <li class="uk-active"><a href="{{ path("home") }}">home</a></li>
                                    <li class="uk-active"><a href="{{ path("gallary") }}">gallery</a></li>
                                    <li class="uk-active"><a href="{{ path("activity_index") }}">activity</a></li>
                                    <li class="uk-active"><a href="{{ path("avis_index") }}">Des Avis</a></li>
                                    <li class="uk-active"><a href="{{ path('logout') }}">LogOut</a></li>
                                {% else %}
                                    <li class="uk-active"><a href="{{ path('app_login') }}">Connexion</a></li>	
                                    <li class="uk-active"><a href="{{ path('registration') }}">Inscription</a></li>
                                {% endif %}
                </ul>
            </div>
        </div>
        {% block body %}
        {% endblock %}
    </body>
    
</html>
