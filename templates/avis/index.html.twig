{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <figure id="banner">
                    <img class="image-avis" src="{{asset("image/av.jpg")}}" alt="img">
                    <figcaption>
                       <h1>Pour Ajouter Une Avis il faut click sur le bottons :) </h1>
                        <a class="lien" class="button" href="{{path('Avis_add')}}">
                            Ajouter Une Avis
                        <i class="fas fa-angle-right"></i></a>
                    </figcaption>
                </figure> 

    <div class="continer" >
    <h2 id="head-tab">Les avis sur des voitures</h2>
    <table class="uk-table uk-table-hover" id="tab">
        <thead>
            <tr>
                <th>Modele</th>
                <th>text</th>
                {% if is_granted("ROLE_ADMIN") %}
                <th>modifier</th>
                
                <th> Delete </th>
                 {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for avi in avis %}
                <tr>
                    <td>
					    <a href="{{ path("avis_show",{'id':avi.id}) }}">{{ avi.voiture.modele }}</a>
				    </td>
                    <td>{{ avi.text }}</td>
                    {% if is_granted("ROLE_ADMIN") %}
                    <td><a class="uk-button uk-button-primary "  href="{{ path('Avis_edit',{'id':avi.id}) }}">modifier</a></td>
                    
                    <td>      
					    <a class="uk-icon-link" uk-icon="trash" href="{{ path('avis_del', {'id':avi.id}) }}"> </a> 
				    </td>
                    {% endif %}
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
    </div>
    <footer class="footer">
            <p >&copy; 2021 -Tablieh~tm Broduction !!</p>
    </footer>
{% endblock %}