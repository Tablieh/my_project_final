{% extends 'base.html.twig' %}

{% block body %}
<a class="link" href="{{ path('home') }}" > Retour </a>
<h1 class="uk-text-center">Voila les informations concerne ce Modele</h1>
         <div class="uk-container uk-container-small">
        <table class="uk-table uk-table-hover-small">
            <thead>
                <tr>
                    <th>Modele</th>
                </tr>
            </thead>
            <tbody>
                {% for modele in modeles %}
                    <tr>
                        <td>{{ modele.modele }}</td>
                    </tr>
                    <tr>
                        {% for voiture in modele.voitures %}
                            <td>
                                <ul>
                                {% for avis in voiture.avis %}
                                    <li>
                                        {{ avis.text }}
                                    </li> 
                                {% endfor %}
                                </ul>
                            </td>
                            
                            
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div> 
{% endblock %}