{% block title %}Home Sweet Home{% endblock %}

{% block body %}
    <br>
        <div >
            <h3 class="uk-text-center">Bienvenue Sur Notre Site !</h3>
        </div>
        <div id="info"><h4 class="heading-color">Choisi une marque : </h4></div>
        {% if app.user %}
            <div class="div-right" >
                <button class="button"	id="marque" ><a class="a-button" href="{{path('Marque_add')}}">Ajouter Une Marque non disponible</a></button>
